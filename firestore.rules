rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get the user's organization ID from their profile
    function getUserOrgId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId;
    }
    
    // Helper function to check if the user belongs to the organization that owns the resource
    function isUserInOrg(orgId) {
      return getUserOrgId() == orgId;
    }
    
    // Users can read their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }
    
    // Organizations can be read by their own members
    match /organizations/{orgId} {
      allow read, update: if isUserInOrg(orgId);
    }
    
    // Organization-specific data can only be accessed by members of that organization
    match /organizations/{orgId}/{collection}/{docId} {
      allow read, write, delete: if isUserInOrg(orgId);
    }
    
  }
}
